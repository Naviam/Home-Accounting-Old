@using Combres.Mvc;
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Html.CombresLink("publicCss")
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <script type="text/javascript" src="@Url.Content(String.Format("~/Scripts/locale/Naviam.JavaScript.{0}.js", System.Threading.Thread.CurrentThread.CurrentUICulture.Name))"></script> 
    @Html.CombresLink("jquery validate")

    
    <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <meta content="IE=EmulateIE7" http-equiv="X-UA-Compatible" />
    <meta content="Naviam.com" name="title" />
    <meta content="Free personal finance, online money management, budgeting, and financial planning software." name="description" />
    <meta content="application/xhtml+xml; charset=utf-8" http-equiv="Content-Type" />
    <meta content="text/css" http-equiv="Content-Style-Type" />
        
    @*intellisense support*@
    @if (false)
    { 
        <script type="text/javascript" src="~/Scripts/jquery-1.6.2.js"></script> 
    }
</head>

<body>
<section class="menu">
    <h1>NAVIAM.COM</h1>
    <nav>
        @{Html.RenderAction("TopMenu", "PublicMenu");}
